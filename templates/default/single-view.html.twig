{% extends 'base.html.twig' %}

{% block title %}Source Exchange
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <h1 id="topic" class="col-md-4 offset-md-4">
                {{ topic.title }}
            </h1>
        </div>
        <div class="row">
            <p class="text-muted col-md-4 offset-md-4 mt-4">
                {{ topic.description }}
            </p>
        </div>
        <div class="row justify-content-center">
            <div class="col-4 mt-2">
                <div id="links" class="card">
                    <div class="card-header">
                        Links zum Thema
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            {% for link in topic.links %}
                                <li class="list-group-item">
                                    <a class="btn btn-link" href="{{ link.href }}" target="_blank">
                                        {{ link.href }}
                                    </a> <button type="button" class="btn btn-danger">Melden</button>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                {% if is_granted('ROLE_USER') %}
                    <br>
                    <div id="links" class="card">
                        <div class="card-header">
                            Link hinzuf√ºgen
                        </div>
                        <div class="card-body">
                            <ul class="list-group">
                                {{ form(linkForm) }}
                            </ul>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
